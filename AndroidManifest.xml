<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raven.drivenotext"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

	<uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.raven.drivenotext.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.raven.drivenotext.SetMessageActivity"
            android:label="@string/title_activity_set_message"
            android:parentActivityName="com.raven.drivenotext.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.raven.drivenotext.HomeActivity" />
        </activity>
        <activity
            android:name="com.raven.drivenotext.ViewMessageActivity"
            android:label="@string/title_activity_view_message"
            android:parentActivityName="com.raven.drivenotext.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.raven.drivenotext.HomeActivity" />
        </activity>
        <activity
            android:name="com.raven.drivenotext.SendMessageActivity"
            android:label="@string/title_activity_send_message"
            android:parentActivityName="com.raven.drivenotext.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.raven.drivenotext.HomeActivity" />
        </activity>
    </application>

</manifest>
